import org.apache.poi.hssf.usermodel.HSSFWorkbook;
import org.apache.poi.ss.usermodel.*;

import java.io.*;

public class SaveAsExcelExample {
    public static void main(String[] args) {
        String inputFilePath = "input.xls";  // Path to the original file
        String outputFilePath = "output.xls"; // Path for the new file

        try (Workbook workbook = new HSSFWorkbook(new FileInputStream(inputFilePath));
             FileOutputStream fos = new FileOutputStream(outputFilePath)) {

            // Perform any modifications if needed (e.g., adding a new column)
            Sheet sheet = workbook.getSheetAt(0); // Access the first sheet
            int newColumnIndex = sheet.getRow(0).getLastCellNum(); // Next column index

            for (Row row : sheet) {
                row.createCell(newColumnIndex).setCellValue("New Value"); // Add "New Value"
            }

            // Save the workbook to the new file (Save As)
            workbook.write(fos);
            System.out.println("File saved as: " + outputFilePath);

        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}