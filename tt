import requests

# Step 1: Call the first API
first_response = requests.get("https://example.com/first-api")

# Step 2: Extract and format cookies into a header string
cookie_header = '; '.join([f"{key}={value}" for key, value in first_response.cookies.items()])

# Now cookie_header is like: "sessionid=abc123; csrftoken=xyz456"