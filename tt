' Set folder path and output file
Dim folderPath, wordFilePath
folderPath = "C:\Screenshots\"   ' Change to your folder path
wordFilePath = folderPath & "ConsolidatedScreenshots.docx"

' Create FileSystemObject
Dim fso, folder, file
Set fso = CreateObject("Scripting.FileSystemObject")
Set folder = fso.GetFolder(folderPath)

' Create Word application
Dim wordApp, wordDoc
Set wordApp = CreateObject("Word.Application")
wordApp.Visible = True  ' Set to False if you don't want Word to open

Set wordDoc = wordApp.Documents.Add

' Loop through files in folder
For Each file In folder.Files
    ' Check if file is an image (add more extensions if needed)
    If LCase(fso.GetExtensionName(file.Name)) = "png" Or _
       LCase(fso.GetExtensionName(file.Name)) = "jpg" Or _
       LCase(fso.GetExtensionName(file.Name)) = "jpeg" Or _
       LCase(fso.GetExtensionName(file.Name)) = "bmp" Then
       
        wordDoc.Paragraphs.Last.Range.InsertParagraphAfter
        wordDoc.Paragraphs.Last.Range.Text = file.Name
        wordDoc.Paragraphs.Last.Range.InsertParagraphAfter
        wordDoc.InlineShapes.AddPicture file.Path
        wordDoc.Paragraphs.Last.Range.InsertParagraphAfter
    End If
Next

' Save and close
wordDoc.SaveAs wordFilePath
wordDoc.Close
wordApp.Quit

' Clean up
Set wordDoc = Nothing
Set wordApp = Nothing
Set folder = Nothing
Set fso = Nothing

MsgBox "All screenshots consolidated into Word document: " & wordFilePath