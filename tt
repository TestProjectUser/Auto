' Set folder path and output Word file path
Dim folderPath, wordFilePath
folderPath = "C:\Screenshots\"   ' Change this to your folder path
wordFilePath = folderPath & "ConsolidatedScreenshots.docx"

' Create FileSystemObject and collect image file names
Dim fso, folder, file, fileList()
Set fso = CreateObject("Scripting.FileSystemObject")
Set folder = fso.GetFolder(folderPath)

ReDim fileList(folder.Files.Count - 1)
Dim i : i = 0

' Collect only image files
For Each file In folder.Files
    If LCase(fso.GetExtensionName(file.Name)) = "png" Or _
       LCase(fso.GetExtensionName(file.Name)) = "jpg" Or _
       LCase(fso.GetExtensionName(file.Name)) = "jpeg" Or _
       LCase(fso.GetExtensionName(file.Name)) = "bmp" Then
       
       fileList(i) = file.Path
       i = i + 1
    End If
Next

' Resize array to actual count
ReDim Preserve fileList(i - 1)

' Sort the fileList array alphabetically (ascending)
Dim j, temp
For i = 0 To UBound(fileList) - 1
    For j = i + 1 To UBound(fileList)
        If UCase(fileList(i)) > UCase(fileList(j)) Then
            temp = fileList(i)
            fileList(i) = fileList(j)
            fileList(j) = temp
        End If
    Next
Next

' Create Word application
Dim wordApp, wordDoc
Set wordApp = CreateObject("Word.Application")
wordApp.Visible = True

Set wordDoc = wordApp.Documents.Add

' Insert images into Word
For i = 0 To UBound(fileList)
    wordDoc.Paragraphs.Last.Range.InsertParagraphAfter
    wordDoc.InlineShapes.AddPicture fileList(i)
    wordDoc.Paragraphs.Last.Range.InsertParagraphAfter
Next

' Save and close
wordDoc.SaveAs wordFilePath
wordDoc.Close
wordApp.Quit

' Clean up
Set wordDoc = Nothing
Set wordApp = Nothing
Set folder = Nothing
Set fso = Nothing

MsgBox "Screenshots consolidated in correct order into: " & wordFilePath