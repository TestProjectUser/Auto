
if os.path.exists(filename):
    # Load existing workbook and sheet
    wb = load_workbook(filename)
    ws = wb.active

    # Check if headers already exist (only if needed)
    if ws.max_row == 0:
        ws.append(columns)
else:
    # Create new workbook and sheet
    wb = Workbook()
    ws = wb.active
    ws.append(columns)

# Append the new row
ws.append(row_values)

# Save the workbook
wb.save(filename)

print(f"Row appended to '{filename}' successfully.")
